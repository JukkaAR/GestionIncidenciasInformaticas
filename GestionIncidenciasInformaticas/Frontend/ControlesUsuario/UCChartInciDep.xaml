<UserControl x:Class="GestionIncidenciasInformaticas.Frontend.ControlesUsuario.UCChartInciDep"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:GestionIncidenciasInformaticas.Frontend.ControlesUsuario" 
             xmlns:lv="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="7*"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Número de incidencias por departamento"
                   Foreground="White" FontSize="20" HorizontalAlignment="Center"
                   VerticalAlignment="Center" Grid.Row="0"/>
        <lv:PieChart x:Name="lvIncidencias" Grid.Row="1" Foreground="Black"/>
    </Grid>
</UserControl>
